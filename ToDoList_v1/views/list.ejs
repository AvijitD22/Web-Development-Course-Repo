<%- include('header'); -%>

<div class="box" id="heading">
    <h1>
        <%= newTitle %>
    </h1>
</div>

<div class="box">
    <% for(var i=0; i < newTasks.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p>
                <%= newTasks[i] %>
            </p>
        </div>
        <% } %>

            <form action="/" method="post" class="item">
                <input type="text" name="newTask" autocomplete="off" placeholder="New Item" autofocus>
                <button type="submit" name="list" value="<%= newTitle %>">+</button>
            </form>
</div>

<%- include('footer'); -%>